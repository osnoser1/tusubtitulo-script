{
    "compilerOptions": {
        "lib": [
            "es2017"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "dist",
        "sourceMap": false,
        "strict": true,
        "target": "es6",
        "typeRoots": [
            "node_modules/@types"
        ],
        "watch": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "include": [
        "src/**/*.ts"
    ]
}